@import "./_variables.styl";

_generateFontFace(weight, style) {
  url = "../fonts/opensans-%s-%s.woff2" % (weight style)

  @font-face {
    font-family: $base-font-name;
    font-weight: weight;
    font-style: style;
    src: url(url) format("woff2");
  }
}

for weight in 300 400 600 {
  _generateFontFace(weight, normal);
  _generateFontFace(weight, italic);
}

_generateFontFace(700, normal)
